<!DOCTYPE html>
<html lang="en">
  <%- include('../layouts/header.ejs', {title: 'Register' , state: 'register' }); %>
  <body>
    <%- include('../layouts/navbar.ejs', {types: 'v2', state: 'register'}); %>

    <!-- Register -->
    <div class="container" >
      <div class="login-form">
        <form action="" >
          <div id="loginForm" style="text-align:center ;">
          <h1 >Register</h1>
          <p><img src="./images/sign_up.gif" alt="AwesomeImage" width="40%"></p>
          <p>
            Already have an account? Login 
            <a href="login.ejs" >here</a>.
          </p>
          
          <input type="text" placeholder="First name" id="fname" class="email-password" required/><br>

          
          <input type="text" placeholder="Last name" id="lname" class="email-password" required/><br>

          
          <input type="text" placeholder="Email Address" id="email" class="email-password" required /><br>

          
          <input
            type="password"
            placeholder="Password"
            id="password"
            class="email-password"
            required
          /><br>
          
          <p>
            By creating an account you agree to our
            <a href="T&C.ejs">Terms & Conditions</a>.
          </p>
          </div>
          
          <div class="buttons">
            <button type="button" onclick="location.href = 'register-verification-sent.ejs';" value="Login" id="registerButton">Register</button>
          </div>
        </form>
      </div>
    </div>
    <!-- Custom Script -->
    <script src="/public/js/register.js"></script>
    <script src="/public/js/footer.js"></script>
    <script src="/public/js/header.js"></script>
    <%- include('../layouts/footer.ejs', {state: 'register'}); %>
  </body>
</html>
