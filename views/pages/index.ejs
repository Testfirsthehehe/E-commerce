
<!DOCTYPE html>
<html lang="en">
<%- include('../layouts/header', {title: 'KeosYaro' , state: 'index' }); %>
  <body>
    <%- include('../layouts/navbar', {types: 'v1', state: 'index'}); %>
    
    <!-- Categories Section -->
    <section class="section category">
      <div class="cat-center">
        <div class="cat">
          <img src="./images/cat3.jpg" alt="" />
          <div>
            <p>WOMEN'S WEAR</p>
          </div>
        </div>
        <div class="cat">
          <img src="./images/cat1.jpg" alt="" />
          <div>
            <p>MEN'S WEAR</p>
          </div>
        </div>
      </div>
    </section>

    <!-- New Arrivals -->
    <section class="section new-arrival">
      <div class="title">
        <h1>NEW ARRIVALS</h1>
        <p>All the latest picked from designer of our store</p>
      </div>

      <div class="product-center">
        <% for(let i=0; i < 4; i++) { %>
          <div class="product-item">
            <a href="productDetails/<%= data[i].pid %>" class="product-thumb">
              <img src="/images/<%= data[i].image %>" alt="" />
            </a>
            <div class="product-info">
              <span><%= data[i].category %></span>
              <a><%= data[i].name %></a>
              <h4 class="product-price">Rp. <%= data[i].price %></h4>
            </div>
          </div>
          <% } %>
      </div>
    </section>

    <!-- Carousel -->
    <div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner"">
        <div class="carousel-item active" data-interval="2000">
          <div class="overlay-image" 
          style="background-image:url(./images/cat1.jpg);">
          </div>
          <div class="container">
            <h1>24/7 We Serve With Best Quality And Service. </h1>
            <p>Save up to 40%</p><br>
            <a href="product" class="btn-1">
              Shop Now!
            </a>
          </div>
        </div>
        <div class="carousel-item" data-interval="2000">
          <div class="overlay-image" 
          style="background-image:url(./images/cat2.jpg);">
          </div>
          <div class="container">
            <h1>Earn Gift Google Play Card by Subscribing</h1>
            <p>Sign up to our newsletter and save 30% for you next purchase. No spam, we promise!</p><br>
            <a href="#" class="btn-1">
              Subscribe Now!
            </a>
          </div>
        </div>
        <div class="carousel-item"data-interval="2000">
          <div class="overlay-image" 
          style="background-image:url(./images/cat3.jpg);">
          </div>
          <div class="container">
            <h1>Benefits SignUp Your Account</h1>
            <p>Free Shipping + Returns. Free Register</p><br>
            <a href="/login" class="btn-1">
              SignUp Now!
            </a>
          </div>
        </div>
      </div>
      <a href="#myCarousel" class="carousel-control-prev" role="button" data-slide="prev">
        <span class="sr-only">Previous</span>
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      </a>
      <a href="#myCarousel" class="carousel-control-next" role="button" data-slide="next">
        <span class="sr-only">Next</span>
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
      </a>
    </div>

    <!-- Featured -->
    <section class="section new-arrival">
      <div class="title">
        <h1>Best Seller</h1>
        <p></p>
      </div>

      <div class="product-center">
        <div class="product-item">
          
            <a href="" class="product-thumb">
              <img src="./images/product-7.jpg" alt="" />
            </a>
            
          
          <div class="product-info">
            <span>MEN'S CLOTHES</span>
            <a href="">Quis Nostrud Exercitation</a>
