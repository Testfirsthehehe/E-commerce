    </section>

    <!-- Contact -->
    <section class="section contact">
      <div class="row">
        <div class="col">
          <h2>SUPPORTS</h2>
          <p>We love our customers and they can reach us any time
          of day we will be at your service 24/7</p>
          <a href="contactus" class="btn-1">Contact</a>
        </div>
        <div class="col">
          <ul>
            <li>
              <h1><i class="bx bxs-truck" style="color:greenyellow"></i>Free Shipping</h1>
              <p>More Money, More Happy </p>
            </li>
            <li>
              <h1><i class="bx bx-undo" style="color:greenyellow"></i>7 days return</h1>
              <p>Guarantee 100%</p>
            </li>
            <li>
